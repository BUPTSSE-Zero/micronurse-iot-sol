{
  "description":"report the humidity at intervals",
  "spec": {
    "id":"humidometer_report",
    "name": "humidometer report",
    "config": [{
      "name": "interval",
      "type": "int",
      "default": 2000
    }, {
      "name": "name",
      "type": "string",
      "default": "humidometer"
    }, {
      "name": "dht11_sensor_pin",
      "type": "int",
      "default": 0
    }],



    "out": {
      "ports": [{
        "name": "value",
        "type": "int"
      },{
        "name": "name",
        "type": "string"
      },{
        "name": "timestamp",
        "type": "long"
      },{
        "name": "json_data",
        "type": "string"
      }]
    }
  }
}
